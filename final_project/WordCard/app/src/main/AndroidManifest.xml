<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.harvard.cs50.wordcard">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WordCard">
        <activity android:name=".ui.Word.AddWordActivity"
            android:label="@string/new_word"/>
        <activity android:name=".ui.Word.CardActivity"
            android:label="@string/card"/>
        <activity android:name=".ui.main.AddLessonActivity"
            android:label="@string/new_lesson"/>
        <activity android:name=".ui.Word.WordActivity"
            android:label="@string/words"/>
        <activity android:name=".ui.profile.EditProfileActivity"
            android:label="@string/edit_profile"/>
        <activity android:name=".ui.register.RegisterActivity"
            android:label="@string/sign_up"/>
        <activity android:name=".ui.main.MainActivity"
            android:label="@string/app_name"/>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/action_sign_in">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.harvard.cs50.wordcard">

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WordCard">
        <activity android:name=".ui.Word.AddWordActivity" />
        <activity android:name=".ui.Word.CardActivity" />
        <activity android:name=".ui.main.AddLessonActivity" />
        <activity android:name=".ui.Word.WordActivity" />
        <activity android:name=".ui.profile.EditProfileActivity" />
        <activity android:name=".ui.register.RegisterActivity" />
        <activity android:name=".ui.main.MainActivity" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/login_failed">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>